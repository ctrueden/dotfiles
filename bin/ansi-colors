#!/bin/bash

# Prints out the 16 ANSI colors to the console.
# Thanks to Todd Werth:
# http://toddwerth.com/2011/07/21/the-original-ir_black-for-os-x-lion/

echo -e "\033[" "0m   0 COLOR_NC (No color)"
echo -e "\033[1;37m1;37 COLOR_WHITE    \033[0;30m0;30 COLOR_BLACK"
echo -e "\033[0;34m0;34 COLOR_BLUE     \033[1;34m1;34 COLOR_LIGHT_BLUE"
echo -e "\033[0;32m0;32 COLOR_GREEN    \033[1;32m1;32 COLOR_LIGHT_GREEN"
echo -e "\033[0;36m0;36 COLOR_CYAN     \033[1;36m1;36 COLOR_LIGHT_CYAN"
echo -e "\033[0;31m0;31 COLOR_RED      \033[1;31m1;31 COLOR_LIGHT_RED"
echo -e "\033[0;35m0;35 COLOR_PURPLE   \033[1;35m1;35 COLOR_LIGHT_PURPLE"
echo -e "\033[0;33m0;33 COLOR_YELLOW   \033[1;33m1;33 COLOR_LIGHT_YELLOW"
echo -e "\033[1;30m1;30 COLOR_GRAY     \033[0;37m0;37 COLOR_LIGHT_GRAY"
